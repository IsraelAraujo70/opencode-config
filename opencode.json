{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-openai-codex-auth@4.1.0", "opencode-gemini-auth"],
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": ["reasoning.encrypted_content"],
        "store": false
      },
      "models": {
        "gpt-5.1-codex-max-medium": {
          "name": "Codex Max (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "options": {
            "reasoningEffort": "medium",
            "reasoningSummary": "detailed",
            "textVerbosity": "medium",
            "include": ["reasoning.encrypted_content"],
            "store": false
          }
        },
        "gpt-5.1-codex-mini-medium": {
          "name": "Codex Mini (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "options": {
            "reasoningEffort": "medium",
            "reasoningSummary": "auto",
            "textVerbosity": "medium",
            "include": ["reasoning.encrypted_content"],
            "store": false
          }
        },
        "gpt-5.2-high": {
          "name": "Gpt-5.2 high (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto",
            "textVerbosity": "medium",
            "include": ["reasoning.encrypted_content"],
            "store": false
          }
        },
        "gpt-5.2-medium": {
          "name": "Gpt-5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "options": {
            "reasoningEffort": "medium",
            "reasoningSummary": "detailed",
            "textVerbosity": "medium",
            "include": ["reasoning.encrypted_content"],
            "store": false
          }
        }
      }
    }
  },
  "agent": {
    "build": {
      "description": "Build agent configured for command-level approvals",
      "permission": {
        "edit": "ask",
        "bash": {
          "*": "allow",
          "git": "ask",
          "git *": "ask",
          "rf": "ask",
          "rf *": "ask",
          "npx": "ask",
          "npx *": "ask",
          "python": "ask",
          "python *": "ask",
          "uvx": "ask",
          "uvx *": "ask"
        }
      }
    },
    "plan": {
      "description": "Research-only mode: read and explore to identify the best solution before development",
      "permission": {
        "edit": "deny",
        "bash": "allow",
        "webfetch": "allow"
      }
    },
    "auto-builder": {
      "description": "Auto-builder mode: unrestricted tools and edits",
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow",
        "doom_loop": "allow",
        "external_directory": "allow"
      }
    }
  },
  "mcp": {
    "mgrep": {
      "type": "local",
      "command": ["mgrep", "mcp"],
      "enabled": true
    }
  }
}
